<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash_activity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@color/white"
        android:padding="15dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/splashimage"
            android:src="@drawable/splash_image"/>



        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/welcomesplash"
            android:layout_width="362dp"
            android:layout_height="272dp"
            android:layout_below="@+id/splashimage"
            android:layout_marginTop="60dp"
            android:layout_marginRight="25dp"
            android:src="@drawable/welcomesplash"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.83"
            tools:layout_editor_absoluteX="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AKHIL MANDAI MANDAL"
            android:id="@+id/splashname"
            android:fontFamily="@font/carter_one"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_below="@+id/welcomesplash"
            android:layout_marginTop="-70dp"

            />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>