<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment1894">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        >



        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="219dp"
            app:cardCornerRadius="29dp"
            app:cardElevation="11dp"
            android:id="@+id/card_one"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/image_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mandainight"/>


        </androidx.cardview.widget.CardView>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:text="@string/histotext1"
            android:layout_below="@id/image_one"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/gotu"
            android:textColor="@color/material_dynamic_neutral_variant30"

            />



    </LinearLayout>




</ScrollView>