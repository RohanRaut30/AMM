<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Fragment.ContactUsFragment">


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="15dp"
           android:padding="15dp">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/RegisterTv"
           android:layout_marginTop="30dp"
           android:text="|| श्री गणेशाय नम: ||"
           android:textAlignment="center"
           android:textStyle="bold"
           />

              <TextView
                  android:id="@+id/RegisterTv1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/RegisterTv"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="50dp"
                  android:fontFamily="@font/carter_one"
                  android:text="Contact Us"
                  android:textAlignment="center"
                  android:textColor="@color/black"
                  android:textSize="35sp"
                  android:textStyle="bold" />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/RegisterTvFullname"
           android:text="Full Name *"
           android:textSize="16sp"
           android:padding="6dp"
           android:textColor="#555555"
           android:layout_below="@+id/RegisterTv"
           android:layout_marginTop="100dp"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/RegisterEtFullname"
           android:hint="Enter Your Full Name"
           android:inputType="textPersonName"
           android:textSize="16sp"
           android:padding="6dp"
           android:layout_below="@+id/RegisterTvFullname"
           android:background="@drawable/border"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/RegisterTvEmail"
           android:text="Email *"
           android:textSize="16sp"
           android:padding="6dp"
           android:textColor="#555555"
           android:layout_below="@+id/RegisterEtFullname"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/RegisterEtEmail"
           android:hint="Enter Your Email"
           android:inputType="textPersonName"
           android:textSize="16sp"
           android:padding="6dp"
           android:layout_below="@+id/RegisterTvEmail"
           android:background="@drawable/border"
           />




       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/RegisterTvMobile"
           android:text="Mobile *"
           android:textSize="16sp"
           android:padding="6dp"
           android:textColor="#555555"
           android:layout_below="@+id/RegisterEtEmail"
           android:layout_marginTop="10dp"
           />
       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/RegisterEtMobile"
           android:hint="Enter Your Mobile(+91)"
           android:inputType="date"
           android:textSize="16sp"
           android:padding="6dp"
           android:layout_below="@+id/RegisterTvMobile"
           android:background="@drawable/border"
           />


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/discription"
           android:text="Comment *"
           android:textSize="16sp"
           android:padding="6dp"
           android:textColor="#555555"
           android:layout_below="@+id/RegisterEtMobile"
           android:layout_marginTop="10dp"
           />

              <EditText
                  android:id="@+id/RegisterEtConfirmPassword"
                  android:layout_width="450dp"
                  android:layout_height="130dp"
                  android:layout_below="@+id/discription"
                  android:hint=""
                  android:inputType="textLongMessage"
                  android:background="@drawable/border1"
                  android:minHeight="48dp"
                  android:padding="6dp"
                  android:textSize="16sp" />

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="70dp"
           android:layout_marginRight="70dp"
           android:text="Submit"
           android:id="@+id/SubmitBtn"
           android:layout_below="@+id/RegisterEtConfirmPassword"
           android:layout_marginTop="50dp"
           android:layout_marginBottom="20dp"
           />
       <ProgressBar
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/progressbar"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:elevation="10dp"
           android:visibility="gone"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/RegisterTvEnd"
           android:layout_marginTop="20dp"
           android:text="All rights reserved @AkhilMandaiMandal 2022"
           android:textAlignment="center"
           android:layout_below="@+id/SubmitBtn"
           android:textSize="10sp"
           />


       </RelativeLayout>



</ScrollView>