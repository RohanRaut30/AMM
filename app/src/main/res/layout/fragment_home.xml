<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mainbread"
                android:layout_marginTop="-115dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-300dp"
                android:src="@drawable/baggremove"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-90dp"
                android:fontFamily="@font/candal"
                android:text="Akhil Mandai Mandal"
                android:textSize="40dp" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="-40dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="11dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amatica_sc_bold"
                        android:gravity="center"
                        android:text="We are Eco Friendly"
                        android:textColor="#C2185B"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="235dp"
                        android:layout_height="100dp"
                        android:padding="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/vectoreco" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="Akhil Mandai Mandal and its Sharada-Ganesh idol is one of the main attractions of Puneâ€™s Ganesh festival, Sharda Gajanan Idol is made from eco friendly material."
                        android:textSize="18sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="11dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amatica_sc_bold"
                        android:gravity="center"
                        android:text="Student Adoption"
                        android:textColor="#C2185B"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="235dp"
                        android:layout_height="100dp"
                        android:src="@drawable/bookvector" />

                    <TextView
                        android:layout_width="252dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="Every year on the occasion of Dahi Handi Utsav (Gokulashtami) we adopt student's for their better educational future under bal kamgar dattak yojana which is run by our Mandal."
                        android:textSize="18sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="11dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amatica_sc_bold"
                        android:gravity="center"
                        android:text="Fight Against Covid-19"
                        android:textColor="#C2185B"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/vectorfight" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="In this Covid pandemic situation our Mandal organised various programs to help the less fortunates get out these tough times."
                        android:textSize="18sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>









    </LinearLayout>












</ScrollView>