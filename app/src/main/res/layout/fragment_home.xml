<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:id="@+id/fragmentContainer"
    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingBottom="50dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|| एकी हेच बळ ||"
                android:textSize="18dp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-90dp"
                android:src="@drawable/baggremove"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-90dp"
                android:fontFamily="@font/candal"
                android:text="Akhil Mandai Mandal"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/HomeText3"
                android:textColor="@color/material_dynamic_neutral_variant30"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/HomeText4"
                android:textColor="@color/material_dynamic_neutral30"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnhome1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Read More" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="-40dp"
                android:id="@+id/ecoFriendly"
                app:cardCornerRadius="20dp"
                app:cardElevation="11dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amatica_sc_bold"
                        android:gravity="center"
                        android:text="@string/we_are_eco_friendly"
                        android:textColor="#C2185B"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="235dp"
                        android:layout_height="100dp"
                        android:padding="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:src="@drawable/vectoreco" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/akhil_mandai_mandal_and_its_sharada_ganesh_idol_is_one_of_the_main_attractions_of_pune_s_ganesh_festival_sharda_gajanan_idol_is_made_from_eco_friendly_material"
                        android:textSize="18sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="11dp"
                android:id="@+id/cardStudent"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amatica_sc_bold"
                        android:gravity="center"
                        android:text="@string/student_adoption"
                        android:textColor="#C2185B"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="235dp"
                        android:layout_height="100dp"
                        android:src="@drawable/bookvector" />

                    <TextView
                        android:layout_width="252dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:padding="2dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="@string/every_year_on_the_occasion_of_dahi_handi_utsav_gokulashtami_we_adopt_student_s_for_their_better_educational_future_under_bal_kamgar_dattak_yojana_which_is_run_by_our_mandal"
                        android:textSize="18sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="11dp"
                app:contentPadding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amatica_sc_bold"
                        android:gravity="center"
                        android:text="@string/fight_against_covid_19"
                        android:textColor="#C2185B"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/vectorfight" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="@string/in_this_covid_pandemic_situation_our_mandal_organised_various_programs_to_help_the_less_fortunates_get_out_these_tough_times"
                        android:textSize="18sp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="15dp"
                android:text="When it comes to event management and future event guidance, the Akhil Mandai Mandal stands out as a trustworthy partner for organizations. With their expertise, comprehensive services, collaborative approach, and unwavering commitment to excellence, they are dedicated to helping your organization achieve its event goals and shape a successful future. By joining forces with the Akhil Mandai Mandal, you can confidently navigate the dynamic landscape of event management, knowing that you have a reliable ally by your side."
                android:textColor="@color/material_dynamic_neutral_variant30"
                android:textSize="20dp"
                tools:ignore="DuplicateIds" />

            <Button
                android:id="@+id/btnTrust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="70dp"
                android:text="our trustee"
                />





        </LinearLayout>









</ScrollView>