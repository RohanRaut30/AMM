<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fragment_background"
    tools:context=".UploadData">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:orientation="vertical"
        android:padding="13dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="-40dp"
            android:id="@+id/uploadevent"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Event Data"
                android:layout_gravity="center"
                android:fontFamily="@font/yatra_one"
                android:textSize="25sp"/>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="-40dp"
            android:id="@+id/UploadImages"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Images"
                android:layout_gravity="center"
                android:fontFamily="@font/yatra_one"
                android:textSize="25sp"/>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="-40dp"
            android:id="@+id/uploadNotification"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Controller"
                android:layout_gravity="center"
                android:fontFamily="@font/yatra_one"
                android:textSize="20sp"/>



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="-40dp"
            android:id="@+id/goLive"
            app:cardCornerRadius="20dp"
            app:cardElevation="11dp"
            app:contentPadding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Live"
                android:layout_gravity="center"
                android:fontFamily="@font/yatra_one"
                android:textSize="27sp"/>



        </androidx.cardview.widget.CardView>



    </LinearLayout>




</FrameLayout>