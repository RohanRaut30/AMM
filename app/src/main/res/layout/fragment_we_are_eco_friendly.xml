<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    tools:context=".WeAreEcoFriendly">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingBottom="40dp"
        >



        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/yatra_one"
            android:layout_marginTop="30dp"
            android:text="We Are Eco Friendly"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/ecoText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/gotu"
            android:textColor="@color/material_dynamic_neutral30"
            android:text="@string/histotext2"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ecoText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/gotu"
            android:textColor="@color/material_dynamic_neutral30"
            android:text="@string/histotext3"
            android:textSize="20dp" />



    </LinearLayout>



</ScrollView>